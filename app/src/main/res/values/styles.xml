<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基礎主題 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1a1a2e</item>
        <item name="colorPrimaryDark">#0f3460</item>
        <item name="colorAccent">#ffd700</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 遊戲標題樣式 - 更有遊戲感 -->
    <style name="GameTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 遊戲普通文字樣式 - 增強遊戲感 -->
    <style name="GameNormalText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- 遊戲小文字樣式 -->
    <style name="GameSmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- 遊戲數據文字樣式 - 數字風格 -->
    <style name="GameStatsText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#00FF7F</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:shadowColor">#004400</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 遊戲按鈕文字樣式 - 更突出 -->
    <style name="GameButtonText">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- 彈出菜單標題樣式 - 強化視覺效果 -->
    <style name="PopupTitleText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 菜單項目標題樣式 - 修正顏色對比 -->
    <style name="MenuItemTitleText">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- 菜單項目描述樣式 - 增強可讀性 -->
    <style name="MenuItemDescText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#B0B0B0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 新增：位置指示器文字樣式 -->
    <style name="LocationIndicatorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#8B4513</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowColor">#FFF8DC</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 新增：頭像區域樣式 -->
    <style name="AvatarText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 新增：狀態條文字樣式 -->
    <style name="StatusBarText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>