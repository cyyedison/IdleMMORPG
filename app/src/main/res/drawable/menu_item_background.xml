<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- 陰影 -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- 按下效果 -->
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#4a5d7a"
                        android:endColor="#2e3a59"
                        android:angle="90" />
                    <corners android:radius="10dp" />
                    <stroke android:width="2dp" android:color="#ff6b35" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 正常狀態 -->
    <item>
        <layer-list>
            <!-- 外部陰影 -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- 主體背景 -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#3d4a7a"
                        android:endColor="#2a3441"
                        android:angle="135" />
                    <corners android:radius="10dp" />
                    <stroke android:width="1dp" android:color="#5a6b8c" />
                </shape>
            </item>
            <!-- 頂部高光 -->
            <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="20dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#20ffffff"
                        android:endColor="#00ffffff"
                        android:angle="90" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- 左側金色邊條 - 調整寬度避免遮蓋文字 -->
            <item android:top="4dp" android:left="2dp" android:right="276dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="#ffd700" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>