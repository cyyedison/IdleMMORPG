<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- 陰影 -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- 按下效果 -->
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#3d5a80"
                        android:endColor="#2d4159"
                        android:angle="90" />
                    <corners android:radius="8dp" />
                    <stroke android:width="2dp" android:color="#ff6b35" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 選中狀態 -->
    <item android:state_selected="true">
        <layer-list>
            <!-- 陰影 -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#60000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- 選中效果 -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#5d7ca3"
                        android:endColor="#4a5f7a"
                        android:angle="90" />
                    <corners android:radius="8dp" />
                    <stroke android:width="2dp" android:color="#ffd700" />
                </shape>
            </item>
            <!-- 發光效果 -->
            <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#60ffd700"
                        android:endColor="#00ffd700"
                        android:angle="90" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 正常狀態 -->
    <item>
        <layer-list>
            <!-- 陰影 -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- 主體 -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#4a5d7a"
                        android:endColor="#2e3a59"
                        android:angle="90" />
                    <corners android:radius="8dp" />
                    <stroke android:width="1dp" android:color="#6b8caf" />
                </shape>
            </item>
            <!-- 高光 -->
            <item android:top="2dp" android:left="2dp" android:right="4dp" android:bottom="20dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#40ffffff"
                        android:endColor="#00ffffff"
                        android:angle="90" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>