<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外部陰影 -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- 主體背景 -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2d3561"
                android:centerColor="#1e2749"
                android:endColor="#141b2e"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke android:width="3dp" android:color="#ffd700" />
        </shape>
    </item>
    <!-- 內部高光 -->
    <item android:top="4dp" android:left="4dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40ffd700"
                android:endColor="#00ffd700"
                android:angle="90" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- 裝飾邊框 -->
    <item android:top="8dp" android:left="8dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#8b4513" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>